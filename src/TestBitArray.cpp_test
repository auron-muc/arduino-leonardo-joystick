#include <stdio.h>
#include "BitArrayTemplate.h"

#define SET_SIZE 64

BitArrayTemplate<SET_SIZE> mySet;

void printSet() {
	uint8_t* buf = mySet.getBuffer();

	for (int i =0; i < SET_SIZE/8; i++) {
		printf("%02x", buf[i]);
	}
	printf(" == ");
	for (int i =0; i < SET_SIZE; i++) {
		if (i % 8 ==0 ) printf(" ");
		printf("%1x", mySet.getBit(8*(i>>3) + (7-(i&7)) ));
	}
	printf("\n");
}

